@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}
<h1>Users List</h1>
<a class="btn btn-primary d-none" id="alert" asp-action="Add">Add New User</a>
<div class="alert alert-success" role="alert">
    User Deleted!
</div>
<table class=" table table-striped mt-3">
    <thead>
        <tr class="bg-primary text-white ">
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ",user.Roles)</td>
                <td>
                    <a class="btn btn-primary" asp-controller="User" asp-action="ManageRoles" asp-route-userId="@user.Id">ManageRoles</a>
                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Edit" asp-route-userId="@user.Id">User Profile</a>
                    <a class="btn btn-danger js-delete" href="js:;" data-id="@user.Id" >Delete</a>
                </td>
            </tr>   
        }
    </tbody>

